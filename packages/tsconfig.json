{
	"extends": ["@nicholan/tsconfig"],
	"compilerOptions": {
	  "target": "ES6",
	  "lib": ["ES2020"],
      "rootDir": ".",
	  "strict": true,
	  "esModuleInterop": true,
	  "skipLibCheck": true,
	  "sourceMap": true,
	  "inlineSources": true,
	  "declaration": true,
	  "forceConsistentCasingInFileNames": true,
	  "composite": true,
	  "tsBuildInfoFile": "./.tsbuildinfo/tsconfig.tsbuildinfo"
	},
	"include": [
	  "utilities/src",
	  "zod-data-types/src"
	],
	"exclude": [
	  "node_modules",
	  "**/node_modules/*"
	]
}