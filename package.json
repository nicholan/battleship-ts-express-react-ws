{
	"name": "battleship",
	"version": "1.0.0",
	"private": true,
	"type": "module",
	"scripts": {
		"test": "pnpm --filter client run test",
		"test:e2e": "pnpm --filter tests run test",
		"install:clean": "rm -rf node_modules && pnpm install",
		"start:dev": "concurrently \"pnpm start:server:dev\" \"pnpm start:client:dev\"",
		"lint": "concurrently \"pnpm lint:server\" \"pnpm lint:client\" \"pnpm lint:tests\" \"pnpm lint:packages\"",
		"lint:tests": "npx @biomejs/biome check --write --unsafe ./tests/e2e",
		"lint:server": "pnpm --filter server run lint:fix",
		"lint:client": "pnpm --filter client run lint:fix",
		"lint:packages": "npx @biomejs/biome check --write --unsafe ./packages",
		"start": "pnpm run build:vite && pnpm run start:server",
		"start:server": "pnpm --filter server run start",
		"start:e2e": "pnpm --filter server run start:e2e",
		"start:production": "pnpm --filter server run start:production",
		"build": "pnpm build:packages && pnpm build:frontend && pnpm build:server",
		"build:packages": "pnpm --filter packages run build",
		"build:frontend": "pnpm --filter client run build",
		"build:server": "pnpm --filter server run build"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/nicholan/battleship-ts-express-react-ws.git"
	},
	"keywords": [],
	"author": "Nicholas Anttila",
	"license": "ISC",
	"bugs": {
		"url": "https://github.com/nicholan/battleship-ts-express-react-ws/issues"
	},
	"homepage": "https://github.com/nicholan/battleship-ts-express-react-ws#readme",
	"dependencies": {
		"@packages/utilities": "workspace:*",
		"@packages/zod-data-types": "workspace:*",
		"@trpc/client": "^10.29.0",
		"@trpc/server": "^10.29.0",
		"websocket": "^1.0.34",
		"zod": "latest"
	},
	"devDependencies": {
		"@biomejs/biome": "1.8.3",
		"@nicholan/tsconfig": "latest",
		"@swc/core": "^1.3.61",
		"@types/websocket": "^1.0.5",
		"concurrently": "latest",
		"typescript": "5.0.2"
	},
	"packageManager": "pnpm@8.3.1",
	"engines": {
		"pnpm": ">=8.3.1",
		"node": ">=20.0.0"
	}
}
